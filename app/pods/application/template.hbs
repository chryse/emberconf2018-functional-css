<div class="flex">
  <div class="w-64 flex-no-shrink min-h-screen p-4 border-r bg-grey-lightest {{if isHidingSidebar 'hidden'}}">
    <p class='mt-3 text-xl'>
      {{#link-to 'application' class='text-center text-black no-underline text-base font-bold uppercase'}}
        Functional<span class="text-blue">CSS</span>
      {{/link-to}}
    </p>
    <ul class='list-reset mt-8'>
      {{#nav-link '1-lecture' step=1 type='Lecture'}}
        Intro to Functional CSS
      {{/nav-link}}
      {{#nav-link '2-interactive-lecture' step=2 type='Interactive lecture' mockup='/images/2-mockup.gif'}}
        Our first template
      {{/nav-link}}
      {{#nav-link '3-exercise' step=3 type='Exercise' mockup='/images/3-mockup.gif'}}
        Your turn
      {{/nav-link}}
    </ul>
  </div>
  <div class="flex-grow font-sans min-h-screen">
    <a {{action (toggle 'isHidingSidebar' this)}} href=""
      class='absolute transition inline-block p-4 text-black opacity-25 hover:opacity-100'>
      {{fa-icon (if isHidingSidebar 'chevron-right' 'chevron-left')}}
    </a>

    {{outlet}}
  </div>
</div>
